<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view of Merge move line -->
    <record id="view_merge_move_line" model="ir.ui.view">
        <field name="name">Merge Move Line</field>
        <field name="model">merge.move.line</field>
        <field name="arch" type="xml">
             <form string="Move Line Merge">
                <group>
                    <h3>選択した商品を新規配送で登録しますか？</h3>
                    <newline/>
                    <h3>※選択した商品は既存の配送から削除されます</h3>
                </group>
                <footer>
                    <button name="merge_move_line" string="Yes" type="object"
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action of Merge Move Line -->
    <record id="action_view_merge_move_line" model="ir.actions.act_window">
        <field name="name">Merge Move Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">merge.move.line</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_merge_move_line"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_move_line"/>
    </record>
</odoo>