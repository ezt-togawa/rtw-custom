<odoo>
  <record model="ir.ui.view" id="rtw_partner_translate">
    <field name="name">rtw_partner_translate</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@class='o_address_format']" position="replace">
        <div>
          <field name="zip" placeholder="ZIP" class="o_address_zip" style="width:100%"
          attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
          <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" style="width:100%"
          attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
          <field name="city" placeholder="City" class="o_address_city" style="width:100%"
          attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
          <field name="street" placeholder="Street..." class="o_address_street" style="width:100%"
          attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
          <field name="street2" placeholder="Street 2..." class="o_address_street" style="width:100%"
          attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
          <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' style="width:100%"
          attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
        </div>
      </xpath>
    </field>
  </record>
</odoo>