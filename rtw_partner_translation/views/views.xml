<odoo>
  <data>
    <record model="ir.ui.view" id="rtw_partner_translate">
      <field name="name">rtw_partner_translate</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="l10n_jp_address_layout.res_partner_japan_address_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@class='o_address_format o_zip_state_city']" position="replace">
          <div class="o_zip_state_city">
              <field name="type" invisible="1"/>
              <field name="parent_id" invisible="1"/>
              <div class="oe_edit_only">
<!--                      <button name="open_parent" type="object" string="(edit)" class="oe_link" attrs="{'invisible':['|',('parent_id','=',False),('type','!=','contact')]}"/>-->
              </div>
              <div>
                  <span class="oe_read_only">ã€’</span>
                  <field style="width:100%;" name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('type','=','contact'),('parent_id','!=',False)]}"/>
                  <br class="oe_read_only"/>
                  <field style="width:100%;" name="state_id" class="o_address_state" placeholder="State" options='{"no_open":True}' attrs="{'readonly':[('type','=','contact'),('parent_id','!=',False)]}" context="{'country_id':country_id,'zip':zip}"/>
                  <field style="width:100%;" name="city" placeholder="City" class="o_address_city" attrs="{'readonly':[('type','=','contact'),('parent_id','!=',False)]}"/>
              </div>
              <field style="width:100%;" name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly':[('type','=','contact'),('parent_id','!=',False)]}"/>
              <field style="width:100%;" name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly':[('type','=','contact'),('parent_id','!=',False)]}"/>
              <field style="width:100%;" name="country_id" placeholder="Country" class="o_address_country" options='{"no_open":True,"no_create":True}' attrs="{'readonly':[('type','=','contact'),('parent_id','!=',False)]}"/>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>