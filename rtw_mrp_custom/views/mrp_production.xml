<odoo>
    <data>
        <record id="view_mrp_production_form_rtw" model="ir.ui.view">
            <field name="name">rtw mrp production</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Create Revised Edition" name="create_revised_edition"
                        type="object"
                        class="oe_highlight" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Revised Edition" name="revised_edition">
                        <field name="revised_edition_ids" />
                    </page>
                </xpath>
            </field>
        </record>
        <record id="modify_calendar_default" model="ir.ui.view">
            <field name="name">modify_calendar_default</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_production_calendar" />
            <field name="arch" type="xml">
                <xpath expr="/calendar" position="replace">
                    <calendar date_start="date_planned_start"
                              string="Manufacturing Orders" event_limit="5" quick_add="False" mode="month" color="color">
                        <field name="itoshima_shipping_date"/>
                        <field name="shiratani_date"/>
                        <field name="user_id" avatar_field="image_128"/>
                        <field name="product_id"/>
                        <field name="product_qty"/>
                        <field name="prod_parts_arrival_schedule"/>
                    </calendar>
                </xpath>
            </field>
        </record>
        <record id="modify_filter_add_itoshima" model="ir.ui.view">
            <field name="name">modify_filter_add_itoshima</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='starred']" position="after">
                    <separator />
                    <filter string="糸島製造" name="filter_itoshima"
                        domain="[('location_src_id', 'like', '糸島')]" />
                    <separator />
                </xpath>
            </field>
        </record>
        <record id="mrp.mrp_production_action" model="ir.actions.act_window">
            <field name="context">{'search_default_todo': True, 'default_company_id':
                allowed_company_ids[0],'search_default_filter_itoshima':1}</field>
        </record>

        <record id="mrp_production_form_view_mrp_ship_address" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id"
                ref="sales_mo_sequence.mrp_production_form_view_inherit_mrp_sale_mo_sequence" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='overseas']" position="before">
                    <field name="address_ship" widget="radio" options="{'horizontal': true}" />
                    <field name="waypoint_option" string="デポ１"
                        attrs="{'invisible': [('address_ship', '!=', 'デポ１')]}"/>
                    <field name="waypoint_option" string="デポ２"
                        attrs="{'invisible': [('address_ship', '!=', 'デポ２')]}"/>
                    <field name="storehouse_id" widget="many2one"
                        attrs="{'invisible': [('address_ship', '!=', '倉庫')]}" />
                    <field name="mrp_ship_address_id" widget="selection" />
                    <field name="combined_shipment"  />
                </xpath>
            </field>
        </record>

        <record id="mrp_production_tree_view_mrp_ship_address" model="ir.ui.view">
            <field name="name">mrp.production.tree</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="before">
                    <field name="sales_order" optional="show" />
                </xpath>
                <xpath expr="//field[@name='mrp_order_status']" position="replace" />
                <xpath expr="//field[@name='sales_order']" position="after">
                    <field name="mrp_order_status" optional="show" string="発注状態"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="replace" />
                <xpath expr="//field[@name='mrp_order_status']" position="after">
                    <field name="product_id" optional="show" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='product_qty']" position="replace" />
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_qty" sum="Total Qty" string="数量" readonly="1" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position="replace" />
                <xpath expr="//field[@name='product_qty']" position="after">
                    <field name="product_uom_id" string="単位" options="{'no_open':True,'no_create':True}" groups="uom.group_uom" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <field name="combined_shipment" optional="show" />
                    <field name="working_notes" optional="show" />
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="replace" />
                <xpath expr="//field[@name='working_notes']" position="after">
                    <field name="date_deadline" attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="days_remaining" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="decoration-danger">days_remaining &lt; 0</attribute>
                    <attribute name="decoration-warning">days_remaining == 0</attribute>
                    <attribute name="decoration-bf">days_remaining &lt;= 0</attribute>
                </xpath>
                <xpath expr="//field[@name='inspected_button']" position="replace" />
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="inspected_button" optional="hide" string="検品状態"/>
                </xpath>
                <xpath expr="//field[@name='lot_producing_id']" position="replace" />
                <xpath expr="//field[@name='inspected_button']" position="after">
                    <field name="lot_producing_id" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='bom_id']" position="replace" />
                <xpath expr="//field[@name='lot_producing_id']" position="after">
                    <field name="bom_id" optional="hide" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='bom_id']" position="after">
                    <field name="attached" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="replace" />
                <xpath expr="//field[@name='attached']" position="after">
                    <field name="origin" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace" />
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="user_id" optional="hide" widget="many2one_avatar_user"/>
                </xpath>
                <xpath expr="//field[@name='write_uid']" position="replace" />
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="write_uid" optional="hide" string="更新者" />
                </xpath>
                <xpath expr="//field[@name='write_date']" position="replace" />
                <xpath expr="//field[@name='write_uid']" position="after">
                    <field name="write_date" optional="hide" string="更新日" />
                </xpath>
                <xpath expr="//field[@name='write_date']" position="after">
                    <field name="shipping" optional="hide" />
                </xpath>
                <xpath expr="//field[@name='reservation_state']" position="replace" />
                <xpath expr="//field[@name='shipping']" position="after">
                    <field name="reservation_state" optional="hide" />
                </xpath>      
                <xpath expr="//field[@name='company_id']" position="replace" />
                <xpath expr="//field[@name='reservation_state']" position="after">
                    <field name="company_id" optional="hide" />
                </xpath>                          
                <xpath expr="//field[@name='date_planned_start']" position="after">
                    <field name="days_remaining" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='date_planned_start']" position="attributes">
                    <attribute name="widget">date</attribute>
                    <attribute name="string">製造開始予定日</attribute>
                </xpath>
                <xpath expr="//field[@name='date_planned_start']" position="attributes">
                    <attribute name="decoration-danger">date_planned_start and days_remaining &lt; 0</attribute>
                    <attribute name="decoration-warning">date_planned_start and days_remaining == 0</attribute>
                    <attribute name="decoration-bf">date_planned_start and days_remaining &lt;= 0</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="replace" />
                <xpath expr="//field[@name='date_planned_start']" position="after">
                    <field name="state" optional="show" widget='badge' decoration-success="state == 'done'" decoration-info="state not in ('done', 'cancel')"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_production_form_view_inherit_detail_mrp" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
            <xpath expr="//field[@name='production_memo']" position="after">
                    <field name="working_notes"/>
            </xpath>
            </field>
        </record>

        <record id="sale_to_mrp_list_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.to.mrp.list.form.inherit</field>
            <field name="model">sale.to.mrp.list</field>
            <field name="inherit_id" ref="rtw_mrp_custom.sale_to_mrp_list_view_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_planned_start']" position="after">
                    <field name="days_remaining" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='date_planned_start']" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
                <xpath expr="//field[@name='date_planned_start']" position="attributes">
                    <attribute name="decoration-danger">date_planned_start and days_remaining &lt; 0</attribute>
                    <attribute name="decoration-warning">date_planned_start and days_remaining == 0</attribute>
                    <attribute name="decoration-bf">date_planned_start and days_remaining &lt;= 0</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>