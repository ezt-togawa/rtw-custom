<odoo>
    <record id="purchase_order_view_tree_rtw" model="ir.ui.view">
        <field name="name">purchase.order.view.tree.rtw</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
               <field name="open_record_button" widget="html_button" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="replace" />
            <xpath expr="//field[@name='open_record_button']" position="after">
                <field name="origin" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="sale_order_ids" optional="show" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="replace" />
            <xpath expr="//field[@name='sale_order_ids']" position="after">
                <field name="partner_id" optional="show" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="replace" />
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="user_id" optional="show" widget="many2one_avatar_user" />
            </xpath>
            <xpath expr="//field[@name='invoice_status']" position="replace" />
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="invoice_status" optional="show"  widget="badge" decoration-success="invoice_status == 'invoiced'" decoration-info="invoice_status == 'to invoice'" />
            </xpath>
            <xpath expr="//field[@name='date_approve']" position="replace" />
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="date_approve" optional="hide" widget="date" invisible="context.get('quotation_only', False)" />
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="replace" />
            <xpath expr="//field[@name='date_approve']" position="after">
                <field name="partner_ref" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="sale_order_names" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='company_id']" position="replace" />
            <xpath expr="//field[@name='sale_order_names']" position="after">
                <field name="company_id" optional="hide" groups="base.group_multi_company" options="{'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='date_planned']" position="replace" />
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="date_planned" optional="hide" invisible="context.get('quotation_only', False)" />
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="replace" />
            <xpath expr="//field[@name='date_planned']" position="after">
                <field name="activity_ids" optional="hide" widget="list_activity" string="次の活動" />
            </xpath>
            <xpath expr="//field[@name='amount_untaxed']" position="replace" />
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="amount_untaxed" optional="hide" sum="Total Untaxed amount" string="税抜金額" widget="monetary" />
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="replace" />
            <xpath expr="//field[@name='amount_untaxed']" position="after">
                <field name="amount_total" optional="hide" sum="Total amount" widget="monetary" decoration-bf="1" string="合計" />
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="working_notes" optional="hide" />
            </xpath>
        </field>

    </record>
    <record id="view_purchase_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='id']" position="after">
                <field name="operation_type" widget="many2one_link" />
                <field name="working_notes" />
                <field name="check_schedule_boolean" invisible="1" />
            </xpath>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button
                    id="btn_check_schedule"
                    name="toggle_check_schedule"
                    type="object"
                    class="oe_stat_button text-center"
                    icon="fa-warning"
                    string="日程確認"
                    attrs="{'invisible': [('check_schedule_boolean', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_kpis_tree_rtw" model="ir.ui.view">
        <field name="name">purchase.order.inherit.purchase.order.tree.rtw</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="open_record_button" widget="html_button" optional="hide"/>
                <field name="sale_order_ids" optional="show" />
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace" />
            <xpath expr="//field[@name='open_record_button']" position="after">
                <field name="state" optional="show" widget="badge" decoration-success="state == 'purchase' or state == 'done'"
                        decoration-warning="state == 'to approve'" decoration-info="state == 'draft' or state == 'sent'" />
            </xpath>
            <xpath expr="//field[@name='origin']" position="replace" />
            <xpath expr="//field[@name='state']" position="after">
                <field name="origin" optional="show" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="replace" />
            <xpath expr="//field[@name='sale_order_ids']" position="after">
                <field name="partner_id" optional="show" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="replace" />
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="user_id" optional="show" widget="many2one_avatar_user" />
            </xpath>
            <xpath expr="//field[@name='date_order']" position="replace" />
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="date_order" attrs="{'invisible': ['|', '|', ('state', '=', 'purchase'), ('state', '=', 'done'), ('state', '=', 'cancel')]}"
                        invisible="not context.get('quotation_only', False)" widget="remaining_days" optional="show" />
            </xpath>
            <xpath expr="//field[@name='invoice_status']" position="replace" />
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="invoice_status" optional="show" />
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="replace" />
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="partner_ref" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="sale_order_names" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="replace" />
            <xpath expr="//field[@name='sale_order_names']" position="after">
                <field name="company_id" optional="hide" readonly="1" options="{'no_create': True}"
                        groups="base.group_multi_company"/>
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="replace" />
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="activity_ids" optional="hide" widget="list_activity" string="次の活動" />
            </xpath>
            <xpath expr="//field[@name='amount_untaxed']" position="replace" />
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="amount_untaxed" sum="Total Untaxed amount" string="税抜金額" widget="monetary" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="replace" />
            <xpath expr="//field[@name='amount_untaxed']" position="after">
                <field name="amount_total" sum="Total amount" widget="monetary" optional="hide" decoration-bf="1" string="合計"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="schedule_check" widget="check_schedule_activity" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='schedule_check']" position="after">
                <field name="working_notes" optional="hidden" />
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="days_remaining" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="widget">date</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="decoration-danger">date_order and days_remaining &lt; 0</attribute>
                <attribute name="decoration-warning">date_order and days_remaining == 0</attribute>
                <attribute name="decoration-bf">date_order and days_remaining &lt;= 0</attribute>
            </xpath>
        </field>
    </record>
    <record id="purchase_order_personal_list_rtw" model="ir.ui.view">
        <field name="name">purchase.order.personal.list.rtw</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="schedule_check" widget="check_schedule_activity" optional="show" />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_form_sale" model="ir.ui.view">
        <field name="name">purchase.order.sale.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                <field name="name_selection" />
                <field name="allowed_custom_config" invisible="1" />
                <field name="sale_order_ids" />
                <field name="sale_order_names" />
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="destination_note" />
            </xpath>
            <xpath expr="//field[@name='destination_note']" position="before">
                <field name="resend" />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_search_rtw" model="ir.ui.view">
        <field name="name">purchase.order.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="filter_so_ids" string="販売オーダー" />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_search_schedule_check" model="ir.ui.view">
        <field name="name">purchase.order.search.schedule.check</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='activities_exception']" position="before">
                <separator />
                <filter string="Schedule Check" name="check_schedule_activity"
                    domain="[('check_schedule_boolean', '!=', False)]" />
                <separator />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_view_search_rtw" model="ir.ui.view">
        <field name="name">purchase.order.view.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="filter_so_ids" string="販売オーダー" />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_view_inherit_rtw" model="ir.ui.view">
        <field name="name">purchase.order.view.inherit.rtw</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='date_planned_div']/button" position="replace" />
        </field>
    </record>
</odoo>