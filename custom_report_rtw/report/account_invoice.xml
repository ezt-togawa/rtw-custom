<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_3">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="custom_report_rtw.so_ex_layout">
                    <t t-set="total_subprice" t-value="0" />
                    <t t-set="total_listprice" t-value="0" />
                    <t t-if="not o" t-set="o" t-value="doc" />
                    <t t-if="not company">
                        <!-- Multicompany -->
                        <t t-if="company_id">
                            <t t-set="company" t-value="company_id" />
                        </t>
                        <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                            <t t-set="company" t-value="o.company_id.sudo()" />
                        </t>
                        <t t-else="else">
                            <t t-set="company" t-value="res_company" />
                        </t>
                    </t>
                    <t t-call="custom_report_rtw.SO_invoice_header_layout"></t>
                    <div class="page">
                        <t
                            t-set="type">quotation</t>
                        <t t-set="address">
                            <div t-field="docs.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"],
                        "no_marker": True}' />
                            <p t-if="docs.partner_id.vat"><t
                                    t-esc="docs.company_id.country_id.vat_label or 'Tax ID'" />: <span
                                    t-field="docs.partner_id.vat" />
                            </p>
                        </t>
                        <div t-if="docs.company_id.logo or docs.company_id.report_header"
                            class="row zero_min_height">
                        </div>
                        <div class="row size13" style="margin-top:-50px;">
                            <div class="col-8">
                                <div class="d-flex">
                                    <div class="col-8">
                                        <div class="so_price"
                                            style="max-height:25px">
                                            <span t-field="docs.sale_order.send_to_company"
                                                t-att-class="not docs.sale_order.send_to_people and 'border-bottom2'  or ''" />
                                        </div>
                                        <span t-field="docs.sale_order.send_to_people"
                                            class="so_price border-bottom2" />
                                        <br />
                                        <div class="mt-1">平素より格別のお引き立てを賜り厚く御礼申し上げます。 <br />
                                            下記の通り、ご請求申し上げます。<br />
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div>
                                            <span class="title_pdf">お支払期限: </span>
                                            <span
                                                t-if="docs.invoice_date_due"
                                                t-esc="docs.acc_move_invoice_date_due" />
                                        </div>
                                        <div>
                                            <span class="title_pdf">お支払内容:</span>
                                            <span
                                                t-field="docs.payment_details_invoice" />
                                        </div>
                                        <div class="d-flex">
                                            <div>
                                                <span class="title_pdf"> お振込先: </span>
                                            </div>
                                            <div>
                                                <div>西日本シティ銀行 （0190）</div>
                                                <div>筑紫通 （ﾁｸｼﾄﾞｵﾘ） 支店 （714）</div>
                                                <div>（普）0272585</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="col-8">
                                        <span class="mt-1 so_price border-bottom2">件名 :
                                            <t t-if="docs.invoice_origin and ',' in docs.invoice_origin">
                                                <span t-esc="docs.invoice_date and (docs.invoice_date.strftime('%Y年%-m月') + ' 分') or ''"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="docs.sale_order.title"/>
                                            </t>
                                        </span> 
                                    </div>
                                    <div class="col-4">
                                        <div>
                                            <span class="title_pdf">納品日: </span>
                                            <span
                                                t-field="docs.sale_order.sale_order_preferred_delivery_date" />
                                        </div>
                                        <div>
                                            <span class="title_pdf">納品場所: </span>
                                            <span
                                                t-field="docs.sale_order.forwarding_address" />
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="col-8">
                                        <div class="width-money">
                                            <div>税抜合計 <div style="float:right">
                                                    <span t-field="docs.currency_id.symbol" />
                                                    <span
                                                        t-esc="'{0:,.0f}'.format(docs.amount_untaxed)" />
                                                </div>
                                            </div>
                                            <div>消費税 <div style="float:right">
                                                    <span t-field="docs.currency_id.symbol" />
                                                    <span t-esc="'{0:,.0f}'.format(docs.amount_tax)" />
                                                </div>
                                            </div>
                                            <div class="so_price total-price">
                                                <span>税込合計</span>
                                                <div style="float:right">
                                                    <span t-field="docs.currency_id.symbol" />
                                                    <span
                                                        t-esc="'{0:,.0f}'.format(docs.amount_total)" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div
                                            style="display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 3; overflow:hidden;max-height:60px;">
                                            <span class="title_pdf">備考: </span>
                                            <span
                                                t-field="docs.sale_order.sale_order_billing_notes" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="col-4 size11" name="company_address" style="position: relative;">
                                <div style="position: absolute; top: 45px; right: 0; z-index: 1; opacity: 0.3;">
                                    <img style="width: 120px; height: 125px; object-fit: contain;"
                                        src="/custom_report_rtw/static/src/images/signature_photo.png"
                                        alt="Stamp" />
                                </div>
                                <div class="float-right" style="position: relative; z-index: 2;">
                                    <div>
                                        <img style="width:250px;height:auto; object-fit:contain;"
                                            src="/custom_report_rtw/static/src/images/Ritzwell_log.jpg"
                                            alt="Logo" />
                                    </div>
                                    <div style="font-size: 14px;">
                                        <div>
                                            <span>Ritzwell &amp; Co.</span>
                                        </div>
                                        <div>
                                            <span>登録番号:T4290001017449</span>
                                        </div>
                                        <div>
                                            <span>本社</span>
                                        </div>
                                        <div>
                                            <span>〒816-0088</span>
                                        </div>
                                        <div>
                                            <span>福岡県 福岡市博多区</span>
                                        </div>
                                        <div>
                                            <span>板付5-2-9</span>
                                        </div>
                                        <div>
                                            <span>tel.092-584-2240</span>
                                        </div>
                                        <div>
                                            <span>fax.092-584-2241</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table">
                            <t t-set="number" t-value="0" />
                            <t t-set="current_sale_order" t-value="False" />
                            <t t-set="sale_order_counter" t-value="0" />
                            <t t-foreach="docs.account_move_line" t-as="l" t-groupby="10"
                                t-att-last="last">
                                <t t-set="total_listprice"
                                    t-value="total_listprice + l.price_unit * l.quantity" />
                                <t t-if="l_index == 0">
                                    <thead>
                                        <tr class="table-title bold"
                                            style="font-size:13px;background-color:#999999">
                                            <th class="text-center" style="width:1%">№</th>
                                            <th class="text-left" style="width:30%">品名</th>
                                            <th class="text-left" style="width:30%">品番・サイズ</th>
                                            <th class="text-center" style="width:5%">数量</th>
                                            <th class="text-center" style="width:8%">定価</th>
                                            <th class="text-center" style="width:6%">掛率</th>
                                            <th class="text-center" style="width:10%">販売単価</th>
                                            <th class="text-center" style="width:10%">販売金額</th>
                                        </tr>
                                    </thead>
                                </t>
                                <tbody class="invoice_tbody">
                                    <t
                                        t-if="l.display_type =='line_note' or l.display_type =='line_section'">
                                        <tr class="size15 table-border-bottom-auto">
                                            <t t-if="l.display_type =='line_note'">
                                                <td class="text-center size12"></td>
                                                <td class="size11" colspan="9"
                                                    style="padding: 6px 0px;">
                                                    <span t-field="l.name" />
                                                </td>
                                            </t>
                                            <t t-elif="l.display_type =='line_section'">
                                                <td class="bg-section"></td>
                                                <td class="size11 bg-section" colspan="9"
                                                    style="padding: 6px 0px;">
                                                    <span t-field="l.name" />
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <t t-else="">
                                        <tr class="size15 table-border-bottom">
                                            <t>
                                                <td class="text-center" style="font-size:16px;">
                                                    <t t-if="docs.invoice_origin and ',' in docs.invoice_origin and l.sale_line_ids and l.sale_line_ids[0].order_id">
                                                        <t t-set="line_sale_order" t-value="l.sale_line_ids[0].order_id.name" />
                                                        <t t-if="current_sale_order != line_sale_order">
                                                            <t t-set="current_sale_order" t-value="line_sale_order" />
                                                            <t t-set="sale_order_counter" t-value="1" />
                                                        </t>
                                                        <t t-else="">
                                                            <t t-set="sale_order_counter" t-value="sale_order_counter + 1" />
                                                        </t>
                                                        <t t-esc="line_sale_order + '/' + str(sale_order_counter)" />
                                                    </t>
                                                    <t t-else="">
                                                        <t t-set="number" t-value="number + 1" />
                                                        <t t-esc="number" />
                                                    </t>
                                                </td>
                                                <td class="text-left" style="font-size:15px;">
                                                    <div class="two-lines">
                                                        <div t-field="l.acc_line_name_pdf" />
                                                        <t t-if="l.product_id.summary">
                                                            <t t-esc="l.product_id.summary" />
                                                        </t>
                                                        <t t-else="">
                                                            <span></span>
                                                        </t>
                                                        <br />
                                                    </div>
                                                </td>
                                                <td class="text-left">
                                                    <div class="two-lines">
                                                        <div style="font-size:16px;"
                                                            t-if="l.product_id.product_no"
                                                            t-field="l.product_id.product_no" />
                                                        <t t-if="l.sale_line_ids.product_size">
                                                            <span style="font-size:15px;"
                                                                t-esc="l.sale_line_ids.product_size" />
                                                        </t>
                                                    </div>
                                                </td>
                                                <td class="text-right" style="font-size:16px;">
                                                    <div id="quote_qty" class="two-lines">
                                                        <span t-esc="l.acc_move_line_qty" />
                                                    </div>
                                                </td>
                                                <td class="text-right" style="font-size:16px;">
                                                    <div class="two-lines">
                                                        <span
                                                            t-esc="'{0:,.0f}'.format(l.price_unit)" />
                                                    </div>
                                                </td>
                                                <td class="text-right" style="font-size:16px;">
                                                    <div class="two-lines">
                                                        <span
                                                            style="font-size:16px"
                                                            t-esc="l.acc_line_discount if l.acc_line_discount % 1 != 0 else int(l.acc_line_discount)" />
                                                    </div>
                                                </td>
                                                <td class="text-right" style="font-size:16px;">
                                                    <div class="two-lines">
                                                        <span
                                                            t-esc="'{0:,.0f}'.format(l.price_unit - l.price_unit * l.discount/100) if l.discount else '{0:,.0f}'.format(l.price_unit)" />
                                                    </div>
                                                </td>
                                                <td class="text-right" style="font-size:16px;">
                                                    <div class="two-lines">
                                                        <span
                                                            style="font-size:16px"
                                                            t-esc="'{0:,.0f}'.format(l.price_subtotal)" />
                                                    </div>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </t>
                        </table>
                        <div style="page-break-inside: avoid;">
                            <div
                                class="d-flex justify-content-end size14">
                                <div
                                    class="pr-4 ">定価合計 : <span class="size16"
                                        t-esc="'{0:,.0f}'.format(total_listprice)" /></div>
                                <div>販売価格合計 : <span class="size16"
                                        t-esc="'{0:,.0f}'.format(docs.amount_untaxed)" /></div>
                            </div>
                            <div class="d-flex justify-content-end size13">
                                <t t-if="docs.invoice_origin">
                                    <span t-esc="docs.invoice_origin" />/ </t>
                                <t t-if="docs.state=='draft'"> Draft Invoice <span
                                        t-if="docs.name != '/'" t-field="docs.name" />
                                </t>
                                <t t-if="docs.state=='posted'"> Invoice <span t-field="docs.name" />
                                </t>
                            </div>
                        </div>
                        <t t-call="custom_report_rtw.page_footer_layout__"></t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="paperformat_invoice_report_3" model="report.paperformat">
        <field name="name">Invoice</field>
        <field name="default" eval="False" />
        <field name="format">custom</field>
        <field name="page_width">210</field>
        <field name="page_height">297</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">12</field>
        <field name="dpi">90</field>
    </record>

    <record id="report_invoice_rtw_3" model="ir.actions.report">
        <field name="name">請求書</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="model_account_move" />
        <field name="report_type">qweb-pdf</field>
        <field name="print_report_name">'請求書-' + object.current_print</field>
        <field name="report_name">custom_report_rtw.report_invoice_3</field>
        <field name="report_file">custom_report_rtw.report_invoice_3</field>
        <field name="paperformat_id" ref="custom_report_rtw.paperformat_invoice_report_3" />
        <field name="attachment_use">True</field>
        <field name="binding_view_types">form</field>
    </record>

</odoo>