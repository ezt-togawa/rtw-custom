<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_purchase_order_sheet_for_part">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="custom_report_rtw.so_ex_layout">
          <t t-set="total_subprice" t-value="0" />
          <t t-set="total_listprice" t-value="0" />
          <t t-if="not o" t-set="o" t-value="doc" />
          <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
              <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
              <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
              <t t-set="company" t-value="res_company" />
            </t>
          </t>
          <t t-call="custom_report_rtw.SO_purchase_order_sheet_for_part_header_layout"></t>
          <div class="page">
            <t t-foreach="docs.purchase_to_sale_order" t-as="so">
              <t
                t-set="type">quotation</t>
              <t t-set="address">
                <div t-field="so.partner_id"
                  t-options='{"widget": "contact", "fields": ["address", "name"],
                        "no_marker": True}' />
                <p t-if="so.partner_id.vat"><t
                    t-esc="so.company_id.country_id.vat_label or 'Tax ID'" />: <span
                    t-field="so.partner_id.vat" />
                </p>
              </t>
              <div t-if="so.company_id.logo or so.company_id.report_header"
                class="row zero_min_height">
              </div>
              <div class="row" style="margin-top:-50px;font-weight:bold">
                <div class="col-4">
                  <div> 発注番号 <span class="so_title"
                      t-field="so.name" />
                  </div>
                  <br />
                  <div>送り先着日 <span t-esc="so.estimated_shipping_date" />
                  </div>
                  <div>出荷希望日 <span t-esc="so.preferred_delivery_date" />
                  </div>
                  <br />
                </div>
                <div class="col-4"></div>
                <div class="col-4" name="company_address">
                  <div>
                    <img style="width:50%"
                      src="/custom_report_rtw/static/src/images/company_logo2.jpeg"
                      alt="Logo" />
                  </div>
                  <div>
                    株式会社リッツウェル
                  </div>
                  <div>
                    大阪オフィス
                  </div>
                  <div>〒542-0081</div>
                  <div>
                    大阪市中央区南船場4-7-6 B1F
                  </div>
                  <div> tel.06-4963-8777
                  </div>
                  <div> fax.06-4963-8778
                  </div>
                  <div>
                    <span t-esc="so.user_id.name" /> 印 </div>
                </div>
              </div>
              <div class="row py-2">
                <div class="col-4">
                  <div> 送り先: <t t-if="so.partner_id.commercial_company_name">
                      <span t-field="so.partner_id.commercial_company_name" />
                    </t>
                  <t
                      t-else="">
                      <span t-field="so.partner_id.name" />
                    </t>
                  <t
                      t-if="so.partner_id.department">
                      <span t-field="so.partner_id.department" />
                    </t>  
                  </div>
                  <div> 住所: <t t-if="so.partner_id.zip"> 〒 <span t-field="so.partner_id.zip" />
                    </t>
                    <t
                      t-if="so.partner_id.street">
                      <span t-field="so.partner_id.street" />
                    </t>
                    <t
                      t-if="so.partner_id.city">
                      <span t-field="so.partner_id.city" />
                    </t>
                    <t
                      t-if="so.partner_id.state_id.name">
                      <span t-field="so.partner_id.state_id.name" />
                    </t>
                    <t
                      t-if="so.partner_id.country_id.name">
                      <span t-field="so.partner_id.country_id.name" />
                    </t>
                  </div>
                  <div> TEL: <span t-field="so.partner_id.phone" />
                  </div>
                </div>
                <div class="col-4">
                  <div> 送り先注記:<!-- <span t-field="docs.remark" />                   
                    <br />
                    <span
                      t-field="docs.production_memo" /> -->
                  </div>
                </div>
                <div class="col-4">
                </div>
              </div>
              <table
                class="table">
                <t t-foreach="docs.purchase_to_order_line" t-as="l" t-groupby="10"
                  t-att-last="last">
                  <t t-set="total_subprice"
                    t-value="total_subprice + l.price_subtotal" />
                  <t t-set="total_listprice"
                    t-value="total_listprice + l.price_unit * l.product_uom_qty" />
                  <t t-if="l_index == 0">
                    <thead>
                      <tr
                        style="background-color:#595959;color:#ffffff;padding:5px 0px 10px 0px;font-size:13px;">
                        <th class="text-center" style="width:2%">№</th>
                        <th class="text-center" style="width:20%">品名</th>
                        <th class="text-center" style="width:25%">仕様・詳細</th>
                        <!-- <th class="text-center" style="width:10%">摘要</th> -->
                        <th class="text-center" style="width:7%">数量</th>
                        <th class="text-center" style="width:3%"></th>
                        <th class="text-center">単価</th>
                        <th class="text-center" style="width:10%">発注金額</th>
                        <th class="text-center" style="width:10%">メモ</th>
                      </tr>
                    </thead>
                  </t>
                  <tbody class="invoice_tbody">
                    <tr style="border-bottom:solid 1px #595959;font-size:12px;">
                      <td t-esc="l_index+1" class="text-center">
                      </td>
                      <td>
                        <span t-field="l.product_id.product_tmpl_id.categ_id.name" />
                        <br />
                        <span t-if="l.p_type" t-field="l.p_type" />
                        <br />
                        <t t-if="l.product_id.width > 0">W<span
                            t-field="l.product_id.width" />
                        </t>
                        <tl
                          t-if="l.product_id.depth > 0">*D<span
                            t-field="l.product_id.depth" />
                        </tl>
                        <t
                          t-if="l.product_id.height > 0">*H<span
                            t-field="l.product_id.height" />
                        </t>
                        <t
                          t-if="l.product_id.sh > 0"> SH<span
                            t-field="l.product_id.sh" />
                        </t>
                        <t
                          t-if="l.product_id.ah > 0"> AH<span
                            t-field="l.product_id.ah" />
                        </t>
                      </td>
                      <td>
                        <t
                          t-foreach="l.product_id.product_template_attribute_value_ids"
                          t-as="string_line"> ● <span
                            t-esc="string_line.display_name" />
                                                <br />
                        </t>
                      </td>
                      <!-- <td>
                        <t
                          t-foreach="l.product_id.product_template_attribute_value_ids"
                          t-as="string_line">
                          <span
                            t-esc="string_line.attribute_id.name" />
                          <br />
                        </t>
                      </td> -->
                      <td class="text-center">
                        <div id="quote_qty">
                          <span
                            t-esc="'{0:,.0f}'.format(l.product_uom_qty)" />
                        </div>
                      </td>
                      <td class="text-center">
                        <span>
                          脚
                        </span>
                      </td>
                      <td class="text-center">
                        <span
                          t-field="l.price_unit" />
                      </td>
                      <td class="text-center">
                        <span
                          t-field="l.price_subtotal" />
                      </td>
                      <td>
                        <t t-if="l.p_type">
                          <span
                            t-field="l.p_type" />
                          <br />
                        </t>
                        <t t-foreach="l.config_session_id.custom_value_ids"
                          t-as="string_line"> ●<span
                            t-esc="string_line.display_name" />: <span
                            t-esc="string_line.value" />
                                                <br />
                        </t>
                      </td>
                    </tr>
                  </tbody>
                </t>
              </table>
              <div class="d-flex justify-content-end">
                <div>販売価格合計 : <span
                    t-esc="so.amount_untaxed" /></div>
              </div>
              <div class="d-flex justify-content-end">
                <span style="font-size:13px"
                  t-field="so.name" />
              </div>
            </t>
          </div>
          <t t-call="custom_report_rtw.page_footer_layout"></t>
        </t>
      </t>
    </t>
  </template>
  <record id="paperformat_purchase_order_sheet_for_part" model="report.paperformat">
    <field name="name">Purchase Order Sheet For Part</field>
    <field name="default" eval="False" />
    <field name="format">custom</field>
    <field name="page_width">210</field>
    <field name="page_height">297</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">20</field>
    <field name="margin_bottom">10</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">12</field>
    <field name="dpi">90</field>
  </record>
  <report
    string="発注書(部材用）"
    id="report_purchase_order_sheet_for_part_rtw111"
    model="purchase.order"
    report_type="qweb-pdf"
    name="custom_report_rtw.report_purchase_order_sheet_for_part"
    file="custom_report_rtw.report_purchase_order_sheet_for_part"
    paperformat="paperformat_purchase_order_sheet_for_part"
  />

</odoo>