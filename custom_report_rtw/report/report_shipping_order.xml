<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_shipping_order">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="custom_report_rtw.so_ex_layout">
          <t t-set="total_subprice" t-value="0" />
          <t t-set="total_listprice" t-value="0" />
          <t t-if="not o" t-set="o" t-value="doc" />
          <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
              <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
              <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
              <t t-set="company" t-value="res_company" />
            </t>
          </t>
          <t t-call="custom_report_rtw.SO_shipping_order_header_layout"></t>
          <div class="page">
            <t
              t-set="type">quotation</t>
            <t t-set="address">
              <div t-field="docs.partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name"],
                        "no_marker": True}' />
              <p t-if="docs.partner_id.vat"><t
                  t-esc="docs.company_id.country_id.vat_label or 'Tax ID'" />: <span
                  t-field="docs.partner_id.vat" />
              </p>
            </t>
            <div t-if="docs.company_id.logo or docs.company_id.report_header"
              class="row zero_min_height">
            </div>
            <div class="row size13" style="margin-top:-50px;">
              <div class="col-4">
                <div> 発注番号 <span class="size16"
                    t-field="docs.sale_id.name" />
                </div>
                <br />
                <div>出荷日 <span class="size14" t-esc="docs.stock_estimated_shipping_date" />
                </div>
                <div>入荷日 <span class="size14" t-if="docs.stock_scheduled_date"
                    t-esc="docs.stock_scheduled_date" />
                </div>
                <div>配送手段 : <span class="size16">定期便</span>
                </div>
                <br />
                <div>物件名 <span class="size14" t-field="docs.sale_id.title" /></div>
                <div style="margin-left:40px">
                  <span t-field="docs.stock_picking_partner_info" />
                </div>

              </div>
              <div class="col-4">
                <div style="text-align:end;font-size:20px;">
                  <t t-if="docs.sale_id.overseas"> 海外 </t>
                </div>
              </div>
              <div class="col-4 size11" name="company_address">
                <div>
                  <img style="width:50%"
                    src="/custom_report_rtw/static/src/images/company_logo2.jpeg"
                    alt="Logo" />
                </div>
                <div class="size12">
                  株式会社リッツウェル
                </div>
                <div class="size12">
                  大阪オフィス
                </div>
                <div>〒542-0081</div>
                <div>
                  大阪市中央区南船場4-7-6 B1F
                </div>
                <div> tel.06-4963-8777
                </div>
                <div> fax.06-4963-8778
                </div>
                <div class="size12">
                  <span t-esc="docs.pic_name" /> 印 </div>
              </div>
            </div>
            <div class="row py-2 size13">
              <div class="col-4">
                <div> 送り先 <span t-if="not docs.partner_id.parent_id" t-field="docs.partner_id.name" />
                  <span
                    t-if="docs.partner_id.parent_id"
                    t-field="docs.partner_id.parent_id.name" />
                </div>
                <div> 住所 <t t-if="docs.partner_id.zip"> 〒<span t-field="docs.partner_id.zip" /></t>
                  <t
                    t-if="docs.partner_id.street">
                    <span t-field="docs.partner_id.street" />
                  </t>
                  <t
                    t-el="docs.partner_id.street2">
                    <span t-field="docs.partner_id.street2" />
                  </t>
                  <t
                    t-if="docs.partner_id.city">
                    <span t-field="docs.partner_id.city" />
                  </t>
                  <t
                    t-if="docs.partner_id.state_id.name">
                    <span t-field="docs.partner_id.state_id.name" />
                  </t>
                  <t
                    t-if="docs.partner_id.country_id.name">
                    <span t-field="docs.partner_id.country_id.name" />
                  </t>
                </div>
                <div> TEL／携帯 <span t-field="docs.partner_id.phone" />
                  <t
                    t-if="docs.partner_id.mobile"> / <span
                      t-field="docs.partner_id.mobile" />
                  </t>
                </div>
              </div>
              <div class="col-4">
                <div> 送り状注記: <span t-field="docs.note" />
                </div>
              </div>
              <div class="col-4">
              </div>
            </div>
            <table
              class="table">
              <t t-foreach="docs.move_ids_without_package" t-as="l" t-groupby="10"
                t-att-last="last">
                <t t-if="l_index == 0">
                  <thead>
                    <tr class="table-title bold">
                      <th class="text-center">№</th>
                      <th class="text-center" style="width:15%">品名</th>
                      <th class="text-center" style="width:19%">品番・サイズ</th>
                      <th class="text-center" style="width:19%">仕様・詳細</th>
                      <th class="text-center" style="width:7%">数量</th>
                      <th class="text-center" style="width:8%">個口数</th>
                      <th class="text-center" style="width:8%">才数</th>
                      <th class="text-center" style="width:10%">入荷元</th>
                      <th class="text-center" style="width:12%">白谷着日</th>
                    </tr>
                  </thead>
                </t>
                <tbody class="invoice_tbody">
                  <tr class="size15 table-border-bottom">
                    <td t-esc="l_index+1" class="text-center size12">
                    </td>
                    <td class="size11">
                      <span t-field="l.product_id.product_tmpl_id.categ_id.name" />
                      <br />
                      <t t-if="l.p_type == 'special'">
                        <span>別注</span>
                      </t>
                      <t t-elif="l.p_type == 'custom'">
                        <span>特注</span>
                      </t>
                    </td>
                    <td class="size13">
                      <div t-if="l.product_id.product_no"
                        t-field="l.product_id.product_no" />
                      <div t-if="l.calculate_product_pack"
                        t-field="l.calculate_product_pack" />
                      <t t-if="l.product_id.width > 0">W<span
                          t-field="l.product_id.width" />
                      </t>
                      <t t-if="l.product_id.depth > 0">*D<span
                          t-field="l.product_id.depth" />
                      </t>
                      <t t-if="l.product_id.height > 0">*H<span
                          t-field="l.product_id.height" />
                      </t>
                      <t t-if="l.product_id.sh > 0"> SH<span
                          t-field="l.product_id.sh" />
                      </t>
                      <t t-if="l.product_id.ah > 0"> AH<span
                          t-field="l.product_id.ah" />
                      </t>
                    </td>
                    <td class="size12">
                      <t t-foreach="l.product_id.product_template_attribute_value_ids"
                        t-as="string_line"> ● <span
                          t-esc="string_line.display_name" />
                                                <br />
                      </t>
                    </td>
                    <td class="text-center size14">
                      <div id="quote_qty">
                        <span
                          t-esc="'{0:,.0f}'.format(l.product_uom_qty)" />
                      </div>
                    </td>
                    <td class="text-center size14">
                      <div>
                        <span
                          t-esc="'{0:,.0f}'.format(l.calculate_packages)" />
                      </div>
                    </td>
                    <td class="text-center size13">
                      <t t-if="l.product_id.product_tmpl_id.sai">
                        <span
                          t-field="l.product_id.product_tmpl_id.sai" />
                      </t>
                    </td>
                    <td class="text-center">
                      <span
                        t-field="l.warehouse_id.name" />
                    </td>
                    <td class="text-center">
                      <t t-if="l.stock_shiratani_date">
                        <span
                          t-esc="l.stock_shiratani_date" />
                      </t>
                    </td>
                  </tr>
                </tbody>
              </t>
            </table>
            <div class="d-flex justify-content-end mr-5 size12"> 配送金額合計（税抜） <span class="size13 bold"  t-field="docs.sale_id.amount_untaxed" />
            </div>
            <div class="d-flex justify-content-end mr-5 size12">
              <span t-field="docs.sale_id.name" />
            </div>
          </div>
          <t t-call="custom_report_rtw.page_footer_layout"></t>
        </t>
      </t>
    </t>
  </template>
  <record id="paperformat_shipping_order" model="report.paperformat">
    <field name="name">Shipping Order Sheet</field>
    <field name="default" eval="False" />
    <field name="format">custom</field>
    <field name="page_width">210</field>
    <field name="page_height">297</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">20</field>
    <field name="margin_bottom">10</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">12</field>
    <field name="dpi">90</field>
  </record>
  <report
    string="出荷依頼書"
    id="report_shipping_order_rtw"
    model="stock.picking"
    report_type="qweb-pdf"
    name="custom_report_rtw.report_shipping_order"
    file="custom_report_rtw.report_shipping_order"
    paperformat="paperformat_shipping_order"
  />

</odoo>