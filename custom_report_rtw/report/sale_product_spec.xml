<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_product_spec">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="custom_report_rtw.so_ex_layout">
          <t t-set="total_subprice" t-value="0" />
          <t t-set="total_listprice" t-value="0" />
          <t t-if="not o" t-set="o" t-value="doc" />
          <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
              <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
              <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
              <t t-set="company" t-value="res_company" />
            </t>
          </t>
          <t t-call="custom_report_rtw.SO_product_spec_header_layout"></t>
          <div class="page">
            <t
              t-set="type">quotation</t>
            <t t-set="address">
              <div t-field="docs.partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name"],
                        "no_marker": True}' />
              <p t-if="docs.partner_id.vat"><t
                  t-esc="docs.company_id.country_id.vat_label or 'Tax ID'" />: <span
                  t-field="docs.partner_id.vat" />
              </p>
            </t>
            <div style="margin-top:-50px">
              <div class="size14"> 件名 <span class="size16" t-esc="docs.title" />
              </div>
            </div>
            <table class="table table-condensed">
              <div>
                <t t-set="lines" t-value="o.order_line" />
                <t t-set="line_count" t-value="len(lines)" />
                <t t-set="processed_indices" t-value="set()" />
                <div>
                  <div class="product-wrap"
                    t-foreach="o.order_line.filtered(lambda x: not(x.display_type == 'line_note' or x.display_type == 'line_section' or x.is_pack_outside or x.config_ok == False))"
                    t-as="l">
                    <div class="product-container">
                      <div class="product-name bg-white mb-1">
                        <span t-field="l.product_id.name" />
                      </div>
                      <div class="row" style="margin:0;">
                        <div class="col-9" style="margin:0;padding:0;" id="layout-left">
                          <div class="row" style="margin:0;">
                            <div class="col-6 bg-white"
                              style="padding:5px;width:49%;height:120px;">
                              <div class="product-img" t-if="l.product_img_pdf"
                                t-field="l.product_img_pdf" t-options='{"widget": "image"}' />
                            </div>
                            <div class="col-6 bg-white ml-1"
                              style="padding:5px;width:49%;height:120px;">
                              <div class="product-img" t-if="l.attach_img_pdf"
                                t-field="l.attach_img_pdf" t-options='{"widget": "image"}' />
                            </div>
                          </div>
                          <div>
                            <t t-set="attr_child_count" t-value="0" />
                            <t t-set="attr_child_ids" t-value="[]" />
                            <t t-set="imgs"
                              t-value="l.child_attr_imgs_pdf and json.loads(l.child_attr_imgs_pdf) or [False]*4" />
                            <t t-set="names"
                              t-value="l.child_attr_names and json.loads(l.child_attr_names) or ['']*4" />
                            <t t-foreach="range(4)" t-as="i">
                              <div class="product-child-attr bg-white mt-1">
                                <div class="row" style="margin:0;">
                                  <div class="col-6" style="padding:5px;">
                                    <t t-if="imgs[i]">
                                      <img t-att-src="'data:image/png;base64,%s' % imgs[i]" />
                                    </t>
                                  </div>
                                  <div class="col-6 size11" style="padding:1px;">
                                    <div
                                      style="margin-top:20px;display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 3; overflow: hidden;max-height:45px;">
                                      <span t-esc="names[i]" />
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </t>
                            <t t-foreach="range(0,5)" t-as="r">
                              <t t-if="attr_child_count &lt; 4">
                                <t t-set="attr_child_count" t-value="attr_child_count + 1" />
                                <div class="product-child-attr bg-white mt-1">
                                </div>
                              </t>
                            </t>
                          </div>
                          <div
                            style="background-color:#fff; height: 21px; border-right:6px solid #d9d9d9;  border-top: 1px solid #d9d9d9;">
                            <t t-set="current_line_index" t-value="None" />
                            <t t-foreach="range(0, line_count)" t-as="i">
                              <t t-if="lines[i] == l">
                                <t t-set="current_line_index" t-value="i" />
                              </t>
                            </t>
                            <t
                              t-if="current_line_index is not None and current_line_index + 1 &lt; line_count">
                              <t t-set="next_line" t-value="lines[current_line_index + 1]" />
                              <t
                                t-if="next_line.display_type == 'line_note' and (current_line_index + 1) not in processed_indices">
                                <t t-set="processed_indices"
                                  t-value="processed_indices | {current_line_index + 1}" />
                                <div class="product-line-note"
                                >
                                  <span t-field="next_line.name" />
                                </div>
                              </t>
                            </t>
                          </div>
                        </div>
                        <div class="col-3 size11 bg-white"
                          style="margin:0;padding:0;height:328px;"
                          id="layout-right">
                          <div>【仕様】</div>
                          <div class="product-attribute">
                            <t t-if="l.sale_order_product_attr_all">
                              <t t-set="attr_arr"
                                t-value="l.sale_order_product_attr_all.split(',')" />
                              <t t-foreach="attr_arr" t-as="att">
                                <div>
                                  <span t-esc="att.strip()" />
                                </div>
                              </t>
                            </t>
                          </div>
                          <br />
                          <div style="overflow:hidden;">
                            <div> 定価: <span
                                t-field="docs.currency_id.symbol" />
                                            <span
                                t-esc="'{0:,.0f}'.format(l.price_unit * l.product_uom_qty)" />
                            </div>
                            <div> サイズ: <t t-if="l.product_size">
                                <span
                                  t-esc="l.product_size" />
                              </t>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </table>
          </div>
          <t t-call="custom_report_rtw.page_footer_layout__"></t>
        </t>
      </t>
    </t>
  </template>
  <record id="paperformat_report_product_spec" model="report.paperformat">
    <field name="name">Product Spec</field>
    <field name="default" eval="False" />
    <field name="format">custom</field>
    <field name="page_width">210</field>
    <field name="page_height">297</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">20</field>
    <field name="margin_bottom">10</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">12</field>
    <field name="dpi">90</field>
  </record>
  <record id="report_product_spec_2" model="ir.actions.report">
    <field name="name">商品仕様書</field>
    <field name="model">sale.order</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">custom_report_rtw.report_product_spec</field>
    <field name="report_file">custom_report_rtw.report_product_spec</field>
    <field name="binding_model_id" ref="model_sale_order" />
    <field name="binding_type">report</field>
    <field name="paperformat_id" ref="paperformat_report_product_spec" />
    <field name="binding_view_types">form</field>
    <field name="print_report_name">'商品仕様書-' + object.current_print</field>
  </record>
</odoo>