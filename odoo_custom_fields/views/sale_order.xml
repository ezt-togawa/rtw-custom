<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_fields_view_order_form" model="ir.ui.view">
        <field name="name">custom.fields.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority" >999</field>
        <field name="arch" type="xml">
            <!-- 顧客のコンボ上での新規作成制御 -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True}</attribute>
            </xpath>
        </field>
    </record>

    <!-- 販売のカレンダー初期画面を月へ変更（Odooのsale.view_sale_order_calendarのカレンダー定義を上書き、modeだけ追加することができないので全体更新）   -->
    <record id="custom_fields_sale_order_calendar" model="ir.ui.view">
        <field name="name">custom.fields.sale.order.calendar</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sale_order_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="mode">month</attribute>
            </xpath>
        </field>
    </record>
</odoo>