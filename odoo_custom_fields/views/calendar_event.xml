<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- カレンダーイベントの初期画面を月へ変更（Odooのcalendar.view_calendar_event_calendarのカレンダー定義を上書き、modeだけ追加することができないので全体更新）   -->
    <record id="custom_fields_calendar_event" model="ir.ui.view">
        <field name="name">custom.fields.calendar.event</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="event_rtw.calendar_view_sf"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="mode">month</attribute>
            </xpath>
        </field>
    </record>
</odoo>