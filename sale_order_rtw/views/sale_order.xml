<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_view_order_rtw_form" model="ir.ui.view">
            <field name="name">Sale Order RTW</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="accepting an order" name="accepting_order" type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('status', '=', 'done')]}" />
                    <button string="back to draft" name="back_to_draft" type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('status', '!=', 'done')]}" />
                </xpath>
                <xpath expr="//button[@id='action_confirm']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('state', 'not in',
                        ['sent']),('status','!=','done')]}</attribute>
                </xpath>
                <xpath expr="//button[not(@id='action_confirm') and @name='action_confirm']"
                    position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('state', 'not in',
                        ['draft']),('status','!=','done')]}</attribute>
                </xpath>
                <xpath expr="//div[@class='oe_button_box']" position="inside">

                    <button name="toggle_under_consideration" type="object" class="oe_stat_button"
                        icon="fa-check-square">
                        <field name="items_under_consideration" widget="boolean_button"
                            options="{&quot;active&quot;: &quot;検討中&quot;, &quot;inactive&quot;: &quot;OK&quot;}" />
                    </button>
                </xpath>
                <xpath expr="//div[@class='oe_button_box']" position="after">
                    <widget name="web_ribbon" title="under review" bg_color="bg-danger"
                        attrs="{'invisible': [('items_under_consideration', '=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <div attrs="{'invisible': [('overseas', '=', False)]}">
                        <span style="color:red">海外</span>
                    </div>
                    <div class="o_row d-flex">
                        <label for="title" string="title" />
                        <field name="title" />
                    </div>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="date_deadline" string="Date deadline" />
                </xpath>
                <xpath expr="//field[@name='state']" position="before">
                    <field name="process" widget="statusbar" options="{'clickable':1}" />
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <group>
                        <!--                        <field name="items_under_consideration" string="Items under
                        consideration" widget="toggle_button"/>-->
                        <field name="overseas" />

                        <field name="status" string="status" widget="selection_badge" />
                        <field name="customer_order_number" string="Customer Order Number" />

                    </group>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="preferred_delivery_date" string="Preferred delivery date" />
                    <field name="time_text" />
                    <field name="preferred_delivery_period" string="Preferred delivery period" />
                    <field name="warehouse_arrive_date" string="デポ１到着日"
                        attrs="{'required': ['&amp;', ('status', '=', 'done'), ('sipping_to', 'in', ['depo', 'inst', 'direct'])]}" />

                    <field name="warehouse_arrive_date_2" string="デポ２到着日"
                        attrs="{'required': ['&amp;', ('status', '=', 'done'),
                         ('sipping_to', 'in', ['depo', 'inst']),
                         ('waypoint_2', '!=', False)]}" />

                    <field name="estimated_shipping_date" string="Estimated shipping date"
                        attrs="{'required': [('status', '=', 'done')]}" />
                    <field name="shiratani_entry_date" string="Shiratani entry Date" />
                    <field name="workday_id" string="作成日数" widget="selection" />
                </xpath>
                <xpath expr="//group[@name='partner_details']" position="inside">
                    <field name="sipping_to" string="配送"
                        options="{'horizontal': true}" />
                    <field name="shipping_to_text" />
                    <field name="waypoint"
                        string="デポ１"
                        context="{'default_type':'delivery'}"
                        domain="[('type', '=', 'delivery')]"
                        attrs="{'invisible': [('sipping_to', '=', 'direct')], 'required': ['&amp;', ('status', '=', 'done'), ('sipping_to', 'in', ['depo','inst'])]}" />
                    <field
                        name="waypoint_2"
                        string="デポ２"
                        context="{'default_type':'delivery'}"
                        domain="[('type', '=', 'delivery')]"
                        attrs="{'invisible': [('sipping_to', '=', 'direct')]}"
                    />
                    <field
                        name="shipping_destination_text"
                        string="送り先"
                        attrs="{'invisible': [('sipping_to', '!=', 'direct')]}"
                    />
                    <field
                        name="forwarding_address_zip"
                        string="納品設置先郵便番号"
                        attrs="{'invisible': [('sipping_to', '=', 'depo')]}" />
                    <field
                        name="forwarding_address"
                        string="納品設置先"
                        attrs="{'invisible': [('sipping_to', '=', 'depo')]}" />
                    <!--                            context="{'default_type':'delivery'}"-->
                    <!--                            domain="[('type', '=', 'delivery')]"-->
                    <!--                    />-->
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="customer_order_number" string="customer_order_number"
                        optional="hide" />
                    <field name="title" optional="show" />
                    <field name="process" optional="show" />
                    <field name="items_under_consideration" string="Items under consideration" optional="hide" />
                    <field name="estimated_shipping_date" optional="show" />
                </xpath>
                <xpath expr="//field[@name='estimated_shipping_date']" position="after">
                    <field name="days_remaining" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='estimated_shipping_date']" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
                <xpath expr="//field[@name='estimated_shipping_date']" position="attributes">
                    <attribute name="decoration-danger">estimated_shipping_date and days_remaining &lt; 0</attribute>
                    <attribute name="decoration-warning">estimated_shipping_date and days_remaining == 0</attribute>
                    <attribute name="decoration-bf">estimated_shipping_date and days_remaining &lt;= 0</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace" />
                <xpath expr="//field[@name='title']" position="after">
                    <field name="partner_id" optional="show" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace" />
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="user_id" optional="show" widget="many2one_avatar_user" />
                </xpath>
                <xpath expr="//field[@name='expected_date']" position="replace" />
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="replace" />
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="state"/>
                </xpath>
                 <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="invisible">0</attribute>
                    <attribute name="decoration-success">state == 'sale' or state == 'done'</attribute>
                    <attribute name="decoration-info">state == 'draft' or state == 'sent'</attribute>
                    <attribute name="widget">badge</attribute>
                    <attribute name="optional">show</attribute>
                </xpath>
            </field>
        </record>
        <record id="order_tree_quotation" model="ir.ui.view">
            <field name="name">sale.order.tree_quotation</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="customer_order_number" string="customer_order_number"
                        optional="hide" />
                    <field name="title" optional="show" />
                    <field name="process" optional="show" />
                    <field name="status" optional="hide" />
                    <field name="items_under_consideration" string="Items under consideration" optional="hide" />
                    <field name="estimated_shipping_date" optional="show" />
                </xpath>
                <xpath expr="//field[@name='estimated_shipping_date']" position="after">
                    <field name="days_remaining" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='estimated_shipping_date']" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
                <xpath expr="//field[@name='estimated_shipping_date']" position="attributes">
                    <attribute name="decoration-danger">estimated_shipping_date and days_remaining &lt; 0</attribute>
                    <attribute name="decoration-warning">estimated_shipping_date and days_remaining == 0</attribute>
                    <attribute name="decoration-bf">estimated_shipping_date and days_remaining &lt;= 0</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace" />
                <xpath expr="//field[@name='title']" position="after">
                    <field name="partner_id" optional="show" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace" />
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="user_id" optional="show" widget="many2one_avatar_user" />
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='expected_date']" position="replace" />
                <xpath expr="//field[@name='commitment_date']" position="after">
                    <field name="warehouse_arrive_date" optional="show" string="デポ1到着日"/>
                    <field name="waypoint" optional="show" />
                    <field name="warehouse_arrive_date_2" optional="show" string="デポ２到着日" />
                    <field name="waypoint_2" optional="show" string="デポ2" />
                    <field name="preferred_delivery_date" optional="show" string="配達希望日" />
                    <field name="time_text" optional="show" string="時間" />
                </xpath>
                <xpath expr="//field[@name='state']" position="after">
                    <field name="transactions" string="取引条件" optional="show" />
                    <field name="transaction_condition_1" string="取引条件1" optional="show" />
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
            </field>
        </record>

        <record id="rtw_sale_search_view" model="ir.ui.view">
            <field name="name">sale.order.search.inherit.sale.rtw</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_quotation']" position="after">
                    <separator />
                    <filter name="status" string="Done" domain="[('status','=','done')]" />
                    <filter string="Items under consideration" name="items_under_consideration"
                        domain="[('items_under_consideration', '=', True)]" />
                    <separator />
                </xpath>
                <xpath expr="//field[@name='campaign_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_order_line_cusom_rtw" model="ir.ui.view">
            <field name="name">sale.order.custom_rtw_tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath
                    expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']"
                    position="after">
                    <field name="memo" />
                    <field name="item_sale_attach_ids" string="attach" />
                    <button
                        name="action_get_item_sale_attach_view"
                        string="View files"
                        type="object"
                        icon="fa-paperclip"
                    />
                </xpath>
            </field>
        </record>
        <record id="view_order_form_toggle_btn" model="ir.ui.view">
            <field name="name">sale.order.form.toggle.btn</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath
                    expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][@class='btn-primary']"
                    position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
                <xpath
                    expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][@context]"
                    position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
            </field>
        </record>
        <record id="sale_order_view_search_inherit_add_title" model="ir.ui.view">
            <field name="name">sale.order.search.inherit.add.title</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="after">
                    <field name="title" string="Title" />
                </xpath>
                <xpath expr="//field[@name='order_line']" position="replace">
                    <field name="order_line" string="プロダクト"
                        filter_domain="['|',
                    ('order_line.product_id', 'ilike', self),
                    ('order_line.product_id.product_tmpl_id.product_no', 'ilike', self)
                ]" />
                </xpath>
            </field>
        </record>
         <record id="view_sale_order_form_add_transactions" model="ir.ui.view">
            <field name="name">add transactions</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_order_type.sot_view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type_id']" position="before">
                    <field name="transactions" string="取引条件(支払方法)" />
                    <field name="transaction_condition_1" string="取引条件1(支払サイト)"  />
                    <field name="transaction_condition_2" string="取引条件2(経理補足1)" />
                    <field name="payment_terms" string="取引レベル" widget="priority" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>