<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_order_form_product_pack" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_sourced_by_line.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']"
                position="after">
                <field name="is_pack_outside" />
            </xpath>
        </field>
    </record>

    <record id="view_order_form_hide_print_description" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="product_spec_rtw.sale_view_order_line_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='print_description']"
                position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_only_form_view_custom">
        <field name="name">product.template.pack.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_pack.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='page_pack']" position="attributes">
                <attribute name="attrs">{'invisible': [('pack_ok', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_view_inherit_stock_quant">
        <field name="name">product.template.view.inherit.stock.quant</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="rtw_product_configurator_ctm.inherit_view_product_configurator_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='attribute_line_ids']" position="after">
                <field name="on_hand_quantity" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='on_hand_quantity']" position="after">
                <field name="available_quantity" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='available_quantity']" position="after">
                <field name="reserved_quantity" optional="show"/>
            </xpath>
              <xpath expr="//field[@name='reserved_quantity']" position="after">
            <button
                name="product_lines_link"
                string="View"
                type="object"
                icon="fa-external-link"
                class="oe_stat_button"/>
        </xpath>
        </field>
    </record>

    <record id="product_template_search_view_add_series_groupby" model="ir.ui.view">
        <field name="name">product.template.search.series.groupby</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pricelist_id']" position="before">
                <field name="series" string="シリーズ"/>
            </xpath>
            <xpath expr="//filter[@name='activities_exception']" position="before">
                <filter string="重要部材" name="important_material" 
                        domain="[('key_component', '=', True)]"/>
                        <separator/>
            </xpath>
            <xpath expr="//filter[@name='categ_id']" position="after">
                <filter string="シリーズ" name="series" context="{'group_by':'series'}"/>
            </xpath>
        </field>
    </record>
</odoo>
